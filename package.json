{
  "name": "@principal-ade/industry-themed-ai-sdk-panel",
  "version": "0.1.3",
  "description": "Industry-themed AI chat panel with configurable AI providers",
  "type": "module",
  "main": "dist/panels.bundle.js",
  "module": "dist/panels.bundle.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/panels.bundle.js",
      "require": "./dist/panels.bundle.js",
      "default": "./dist/panels.bundle.js"
    },
    "./components": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./styles.css": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "keywords": [
    "panel-extension",
    "ai",
    "chat",
    "ai-sdk",
    "theme",
    "industry",
    "panel",
    "react"
  ],
  "author": "Principal ADE Team",
  "license": "MIT",
  "scripts": {
    "build": "bun run clean && bun run build:panel && bun run build:esm && bun run build:types && bun run build:styles",
    "build:panel": "vite build",
    "build:esm": "esbuild src/panel.tsx --bundle --format=esm --outfile=dist/index.mjs --external:react --external:react-dom --external:ai --external:@ai-sdk/react --external:@principal-ade/industry-theme --external:@principal-ade/panel-framework-core --external:react-markdown --external:react-syntax-highlighter --external:lucide-react",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --declaration --declarationMap && cp dist/panel.d.ts dist/index.d.ts && cp dist/panel.d.ts.map dist/index.d.ts.map",
    "build:styles": "cp src/styles/ai-chat-theme.css dist/styles.css",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "ai": "^5.0.0",
    "@ai-sdk/react": "^1.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "@principal-ade/panel-framework-core": {
      "optional": true
    },
    "react-syntax-highlighter": {
      "optional": true
    }
  },
  "dependencies": {
    "@principal-ade/industry-theme": "^0.1.2",
    "@principal-ade/panel-framework-core": "^0.1.5",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@ai-sdk/react": "^1.0.0",
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^9.32.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/addon-onboarding": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@types/bun": "latest",
    "@types/node": "^22.15.26",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.3.4",
    "ai": "^5.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-storybook": "^0.11.1",
    "prettier": "^3.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-syntax-highlighter": "^15.6.1",
    "storybook": "^8.5.0",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.0.7"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/principal-ade/industry-themed-ai-sdk-panel.git"
  },
  "homepage": "https://principal-ade.com"
}
